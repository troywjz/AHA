# 读取文件
with open("D:\code\PyCharmProjects\pi_digits.txt") as file_object:
    # cotents = file_object.read()
    # print(cotents.rstrip())
    # for line in file_object:
    #     print(line.rstrip())
    lines = file_object.readlines()
pi_string = ''
for line in lines:
    pi_string += line.strip()
print(pi_string)
print(len(pi_string))

